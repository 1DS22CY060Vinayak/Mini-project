    <main>
        <section id="resource-upload">
            <h2>Upload Resources</h2>
            <form id="resource-upload-form" action="/upload-resource" method="POST" enctype="multipart/form-data">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
                <label for="description">Description:</label>
                <textarea id="description" name="description" required></textarea>
                <label for="file">File:</label>
                <input type="file" id="file" name="file" accept=".pdf,.doc,.docx,.ppt,.pptx,.xls,.xlsx,.zip" required>
                <button type="submit">Upload Resource</button>
            </form>
        </section>
    </main>

    <footer>
        <p></p>
    </footer>

    <script src="app.js"></script>
